<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:statusBarBackground="@null"
    tools:context="com.google.android.apps.santatracker.tracker.ui.TrackerActivity">

    <FrameLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/card_stream_hidden_peek_height"
        android:fitsSystemWindows="true" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <!-- Card stream (including dashboard) -->
    <FrameLayout
        android:id="@+id/stream_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:elevation="@dimen/toolbar_elevation"
        android:focusable="true"
        android:focusableInTouchMode="false"
        app:layout_behavior="com.google.android.apps.santatracker.tracker.ui.BottomSheetBehavior"
        app:santa_behavior_hiddenPeekHeight="@dimen/card_stream_hidden_peek_height"
        app:santa_behavior_hideable="true"
        app:santa_behavior_peekHeight="@dimen/card_stream_height"
        tools:targetApi="lollipop">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stream"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"/>

        <ImageButton
            android:id="@+id/top"
            style="@style/Widget.Tracker.Button.Top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/return_to_map"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_arrow_upward"/>

    </FrameLayout>

    <!-- FAB: Follow Santa -->
    <com.google.android.apps.santatracker.tracker.ui.FollowSantaButton
        android:id="@+id/follow_santa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="@string/follow_santa"
        android:src="@drawable/follow_santa"
        android:visibility="invisible"
        app:fabSize="normal"
        app:layout_anchor="@id/stream_container"
        app:layout_anchorGravity="top|end"
        tools:visibility="visible"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

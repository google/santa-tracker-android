<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SantaTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/brandSantaTracker</item>
        <item name="colorPrimaryDark">@color/brandSantaTrackerBlue</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.SantaTracker.Splash" parent="Theme.AppCompat.Light.NoActionBar.FullScreen">
        <!--
          These attributes should be defined this way in the parent theme, but apparently that's
          not the case on some devices.
        -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>

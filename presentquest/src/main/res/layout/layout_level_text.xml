<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    tools:background="@color/bg_blue">

    <TextView
        android:id="@+id/text_current_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        tools:text="2" />

    <TextView
        android:id="@+id/text_max_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8sp"
        android:layout_toRightOf="@+id/text_current_level"
        android:text="@string/level_denominator"
        android:textColor="@color/text_faded"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_current_level"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/level"
        android:textColor="@android:color/white"
        android:textSize="8sp"
        android:textStyle="normal|bold" />

</RelativeLayout>
